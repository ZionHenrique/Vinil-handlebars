<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{vinil.nome}} - Vinil Store</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header class="header">
        <div class="header-content">
            <a href="/" class="logo">Vinil Store</a>
            <nav class="nav">
                <a href="/">Home</a>
                <a href="/vinis">Vinis</a>
                <a href="/perfis">Clientes</a>
                <a href="/compras">Compras</a>
                <a href="/generos">Gêneros</a>
            </nav>
        </div>
    </header>

    <div class="container">
        <div class="card">
            <div style="display: grid; grid-template-columns: 300px 1fr; gap: 30px; align-items: start;">
                <div style="text-align: center;">
                    {{#if vinil.foto}}
                    <img src="{{vinil.foto}}" alt="{{vinil.nome}}" class="vinil-photo" style="width: 100%; height: 300px; margin-bottom: 20px;" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                    <div class="vinil-image" style="width: 100%; height: 300px; margin-bottom: 20px; display: none;" data-nome="{{vinil.nome}}" data-artista="{{vinil.artista}}" data-ano="{{vinil.ano}}"></div>
                    {{else}}
                    <div class="vinil-image" style="width: 100%; height: 300px; margin-bottom: 20px;" data-nome="{{vinil.nome}}" data-artista="{{vinil.artista}}" data-ano="{{vinil.ano}}"></div>
                    {{/if}}
                    <div style="font-size: 48px; font-weight: bold; color: var(--accent-dark); margin-bottom: 10px;">R$ {{vinil.preco}}</div>
                    {{#if vinil.quant}}
                    <span class="badge badge-success" style="background: #28a745; color: white;">Em Estoque</span>
                    {{else}}
                    <span class="badge" style="background: #dc3545; color: white;">Esgotado</span>
                    {{/if}}
                </div>
                <div>
                    <h1 class="card-title" style="margin-bottom: 20px;">{{vinil.nome}}</h1>
                    <p style="font-size: 20px; color: #666; margin-bottom: 30px;">{{vinil.artista}}</p>
                    
                    <div style="margin-bottom: 20px;">
                        <strong style="color: var(--primary-color);">Ano de Lançamento:</strong>
                        <span style="font-size: 18px; margin-left: 10px;">{{vinil.ano}}</span>
                    </div>
                    
                    <div style="margin-bottom: 20px;">
                        <strong style="color: var(--primary-color);">Quantidade em Estoque:</strong>
                        <span style="font-size: 18px; margin-left: 10px;">{{vinil.quant}} unidades</span>
                    </div>
                    
                    <div style="margin-bottom: 30px;">
                        <strong style="color: var(--primary-color); display: block; margin-bottom: 10px;">Gêneros:</strong>
                        {{#each vinil.genero}}
                        <span class="badge">{{this}}</span>
                        {{/each}}
                    </div>
                    
                    <div class="form-actions">
                        <a href="/vinis/{{vinil.id}}/edit" class="btn btn-primary">Editar Vinil</a>
                        <form action="/vinis/{{vinil.id}}/delete" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Tem certeza que deseja excluir este vinil?')">Excluir</button>
                        </form>
                        <a href="/vinis" class="btn btn-secondary">Voltar para Catálogo</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/vinyl-covers.js"></script>
    <script>
        // Aplicar capa vintage na página de detalhes
        document.addEventListener('DOMContentLoaded', function() {
            const vinilImage = document.querySelector('.vinil-image[data-nome]');
            if (vinilImage) {
                const nome = vinilImage.getAttribute('data-nome');
                const artista = vinilImage.getAttribute('data-artista');
                const ano = vinilImage.getAttribute('data-ano');
                generateVinylCover(vinilImage, nome, artista, ano);
            }
        });
    </script>
</body>
</html>

